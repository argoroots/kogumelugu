    .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#kml-navbar-collapse', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='/' + page.language)
            img(src='/assets/img/kogumelugu-turquoise.svg')
    #kml-navbar-collapse.collapse.navbar-collapse
        ul.nav.navbar-nav
            each m in G.menu
                li
                    a(href=m.link)= m.text

        ul.nav.navbar-nav.navbar-right
            for l, idx in page.otherLocales
                li
                    a(href='/' + idx + '/' + l.path)= idx

