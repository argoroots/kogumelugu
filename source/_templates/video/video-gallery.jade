#galleryPush(style='background:#3a3a3c; background-size: cover; padding:0px; _:none')

.gallery.container
    .row
        each v, idx in F.videos
            a(href= page.language + '/video/' + v.properties.path.values[0].value)
                .video-thumb(style="background-position: center center; background-size:cover;", data-idx=idx, data-video=v.properties.videoUrl.values[0].value)
                    .overlay
                    .wrapper
                        h4
                            span= v.displayname
                        p= v.displayinfo
