extends ../layout.en.jade

block body
    .pagewrapper
        -
            var locale = {
                menu: [
                    { link: 'video', text: 'Videos' },
                    { link: '/' + lang + '#tutvustus', text: 'Introduction' },
                    { link: '/' + lang + '#sinulugu', text: 'Submit Story' },
                    { link: '/' + lang + '#teemad', text: 'Topics' },
                    { link: '/' + lang + '#toetajad', text: 'Team' },
                    { link: '/' + lang + '#toeta', text: 'Support Us' },
                ]
            }

        include signin-nav

        .container-fluid.login-page
            .textcontent
                .textcontainer.container
                    h1.title Enter
                    if error === 'interview'
                        .alert.alert-warning.alert-dismissible(role='alert')
                            button.close(type='button', data-dismiss='alert', aria-label='Close')
                                span(aria-hidden='true') Ã—
                            strong Attention!
                            br
                            | You tried to watch a full-length interview but you need to be logged in for that.
                    h3 Select the appropriate social media service for logging in
                    a(href='signin/facebook')
                        img.img-responsive(src='/img/facebookicon.svg')
                    a(href='signin/google')
                        img.img-responsive(src='/img/googleplusicon.svg')
                    p By entering the portal you agree that your data will be used in the interests of improving the portal but will not be disclosed to third parties
