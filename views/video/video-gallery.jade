.container-fluid.content
    .slider(style='background:#3a3a3c;background-position: center center; background-size: cover;')
    //- Pilt vahetatav UNITASe jaoks
    .subnav
        .row
            .col-md-12.col-sm-12.filters
                .row
                    .col-md-4.col-sm-7.col-xs-6.titleImage
                        img.img-responsive(src='img/Teek.png')
                    .col-md-4.col-md-offset-4.col-sm-offset-0.col-sm-5.col-xs-6
                        .sort
                            .images
                                .instruction.hidden-xs
                                a.sortby(href='')
                                    img.img-responsive(src='img/kasutaja.svg')
                                a.sortby(href='')
                                    img.img-responsive(src='img/kalender.svg')
                            .text
                                .instruction.hidden-xs Reasta:
                                a.sortby(href='') enim vaadatud
                                a.sortby(href='') viimati sisestatud
        .row.dropdowns
            .col-md-3.col-sm-3.col-xs-4.topic
                select.form-control(ng-model='sData.subject', ng-change='doFilter()', data-field='subject')
                    option.placeholder(selected='') Vali teema
                    each s in subjects
                        option(value=s, ng-selected='sData.subject === "' + s + '"')= s
            .col-md-3.col-sm-3.col-xs-4.area
                select.form-control(ng-model='sData.region', ng-change='doFilter()', data-field='region')
                    option.placeholder(selected='') Vali piirkond
                    each r in regions
                        option(value=r, ng-selected='sData.region === "' + r + '"')= r
            .col-md-3.col-sm-3.col-xs-4.generation
                select.form-control(ng-model='sData.generation', ng-change='doFilter()', data-field='generation')
                    option.placeholder(selected='') Vali p√µlvkond
                    each g in generations
                        option(value=g, ng-selected='sData.generation === "' + g + '"')= g
            .col-md-3.col-sm-3.col-xs-12.searchcolumn
                .search
                    input(ng-model='sData.query', ng-change='doFilter()', type='text', placeholder='OTSI')
    #galleryPush(style='_:none')
.gallery.container
    .row
        a(ng-repeat-start='v in sData.videos' ng-href="/video/{{ v.id }}")
        .col-md-4.col-sm-4.col-xs-12.video(ng-repeat-end style="background:url('/video/picture?id={{ v.video }}');background-position: center center; background-size:cover;")
            .overlay
            .wrapper
                h4
                    span {{ v.name }}
                p {{ v.info }}
                a(href="/video/{{ v.id }}")
                    .btn.btn-primary-outline Vaata lugu

