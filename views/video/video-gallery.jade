    #galleryPush(style='display:none')
.gallery.container
    .row
        each vGroup in videos
            if vGroup.length === 2
                each v in vGroup
                    a(href='/video/' + v.get('id'))
                    .col-md-6.col-sm-6.col-xs-12.video(style="background:url('https://kogumelugu.entu.ee/api2/entity-" + v.get('id') + "/picture');background-size:cover;")
                        .overlay
                        .wrapper
                            h4
                                span= v.get('name')
                            p= v.get('info')
                            a(href='/video/' + v.get('id'))
                                .btn.btn-primary-outline Vaata lugu

            if vGroup.length === 3
                each v in vGroup
                    a(href='/video/' + v.get('id'))
                    .col-md-4.col-sm-4.col-xs-12.video(style="background:url('https://kogumelugu.entu.ee/api2/entity-" + v.get('id') + "/picture');background-size:cover;")
                        .overlay
                        .wrapper
                            h4
                                span= v.get('name')
                            p= v.get('info')
                            a(href='/video/' + v.get('id'))
                                .btn.btn-primary-outline Vaata lugu
            if vGroup.length === 5
                a(href='/video/' + vGroup[0].get('id'))
                .col-md-6.col-sm-6.col-xs-12.video(style="background:url('https://kogumelugu.entu.ee/api2/entity-" + vGroup[0].get('id') + "/picture');background-size:cover;")
                    .overlay
                    .wrapper
                        h4
                            span= vGroup[0].get('name')
                        p= vGroup[0].get('info')
                        a(href='/video/' + vGroup[0].get('id'))
                            .btn.btn-primary-outline Vaata lugu
                each v in vGroup.slice(1)
                    a(href='/video/' + v.get('id'))
                    .col-md-3.col-sm-3.col-xs-6.video(style="background:url('https://kogumelugu.entu.ee/api2/entity-" + v.get('id') + "/picture');background-size:cover;")
                        .overlay
                        .wrapper
                            h4
                                span= v.get('name')
                            p= v.get('info')
                            a(href='/video/' + v.get('id'))
                                .btn.btn-primary-outline Vaata lugu
