nav.navbar-default
    .container-fluid.home-nav
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand.visible-xs(href='#')
                img(src='/img/kogumelugu-turquoise.svg')
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
                each m in locale.menu
                    li
                        a(href=m.link)= m.text
            ul.navbar-nav
                li.hidden-xs.hidden-sm.home.overlay-logo
                    a(href='/' + lang)
                        img(src='/img/kogumelugu-navlogo.svg')
            ul.nav.navbar-nav.navbar-right
                li
                    if !user
                        a(href='signin')= locale.signin
                    else
                        a(href='signin/exit')= locale.exit

                if lang !== 'et'
                    li
                        a(href='/et') EST
                if lang !== 'en'
                    li
                        a(href='/en') ENG
                if lang !== 'ru'
                    li
                        a(href='/ru') RUS
