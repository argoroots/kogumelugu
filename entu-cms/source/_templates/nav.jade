nav#galleryNav.navbar-default.navbar-default.navbar-fixed-top.shrink
  .navbar-header
    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#kml-navbar-collapse', aria-expanded='false')
      span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
      span.icon-bar
    a.navbar-brand(href='/' + page.language)
      img(src='/assets/img/kogumelugu-turquoise.svg')


  #kml-navbar-collapse.collapse.navbar-collapse
    ul.nav.navbar-nav
      each m in D.nav
        li
          a(href='/' + page.language + '/' + m.link)= m.text
      li.visible-xs.visible-sm
        a(href=D.nav[0].link)= D.nav[0].text
      li
    ul.nav.navbar-nav.navbar-right
      li
        .search
          input(ng-model='sData.query', ng-change='doFilter(false)', type='text', placeholde=D.txt.nav.filterQuery)
      li
        if !user
          a(href='signin')= D.txt.nav.signin
        else
          a(href='signin/exit')= D.txt.nav.exit

      if page.language !== 'et'
        li
          a(href='/et' + page.path) EST
      if page.language !== 'en'
        li
          a(href='/en' + page.path) ENG
      //- if page.language !== 'ru'
      //-   li
      //-     a(href='/ru' + path.substr(3)) RUS

#galleryPush(style='background:#3a3a3c; background-size: cover; padding:0px; _:none')
