.footer
  .container
    .row
      .col-md-4.logosfooter
        a(href='http://unitas.ee' target='_blank')
          img.img-responsive.unitaslogo(src='/assets/img/unitas+logo.jpg')
        
      .col-md-3
        p
          b= D.txt.footer.unitas
        p= D.txt.footer.email
        p= D.txt.footer.phone
        p= D.txt.footer.address
      .col-md-1.socialfooter
        ul
          a(href='http://unitas.ee', target='_blank')
            li
              img(src='/assets/img/webicon.svg')
          a(href='https://www.facebook.com/KoguMeLugu/', target='_blank')
            li
              img(src='/assets/img/facebooksocialicon.svg')
          a(href='https://twitter.com/UnitasFNDN', target='_blank')
            li
              img(src='/assets/img/twittersocialicon.svg')
      .col-md-4.mailfooter
        p
          b= D.txt.footer.orderNewsletter

        // Begin MailChimp Signup Form
        form#mc-embedded-subscribe-form.validate(action='//unitasfoundation.us6.list-manage.com/subscribe/post?u=4fddc06b8b5a01ff32f8f7578&id=1c3ce8501a', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='')
          #mc_embed_signup_scroll
            .mc-field-group
            input#mce-FNAME.required(type='text', value='*', name='FNAME', style='display:none')
            .mc-field-group
            input#mce-LNAME.required(type='text', value='*', name='LNAME', style='display:none')
            .mc-field-group
            input#mce-EMAIL.required.email.form-control(type='email', value='', name='EMAIL', placeholder=D.txt.footer.emailPlaceholder)
            #mce-responses.clear
            #mce-error-response.alert.alert-danger.response(style='display:none')
            #mce-success-response.alert.alert-success.response(style='display:none')

            div(style='position: absolute; left: -5000px;height:0;', aria-hidden='true')
              input(type='text', name='b_4fddc06b8b5a01ff32f8f7578_1c3ce8501a', tabindex='-1', value='')
            .clear
            input#mc-embedded-subscribe.btn.btn-submit(type='submit', value=D.txt.footer.subscribe, name='subscribe')
        script(type='text/javascript', src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js')
